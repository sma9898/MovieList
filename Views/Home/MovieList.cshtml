@{
    ViewBag.Title = "Movie List";
}

<!--Import model-->
@model IEnumerable<MovieResponse>

<div>
    <a asp-action="EnterMovies">Add a Movie</a>

    <h2>Here is the list of Movies</h2>
    <table class="table table-bordered table-striped">
        <!--style="width:50%">-->
        <thead>
            <tr>
                <th></th>
                <th>Category</th>
                <th>Title</th>
                <th>Year</th>
                <th>Director</th>
                <th>Rating</th>
                <th>Edited?</th>
                <th>Lent To</th>
                <th>Notes</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (MovieResponse x in Model)
            {
            <tr>
                <td><a asp-action="Update" asp-route-Title="@x.Title">Update</a></td>
                <td>@x.Category</td>
                <td>@x.Title</td>
                <td>@x.Year</td>
                <td>@x.Director</td>
                <td>@x.Rating</td>
                <td>@x.Edited</td>
                <td>@x.LentTo</td>
                <td>@x.Notes</td>
                <td>
                    <form asp-action="Delete" method="post">
                        <input type="hidden" name="Title" value="@x.Title" />
                        <button type="submit">Delete</button>
                    </form>
                </td>

            </tr>
            }

        </tbody>
    </table>
</div>